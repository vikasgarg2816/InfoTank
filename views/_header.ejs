<header id="layout-header">
    <nav>
        <div class="mini-logo">
            <p>
                <img id = "icon" src = "./images/icon.png">
                <a href='/'>  
                    InfoTank
                </a>
            </p>
        </div>
    
        <div class="auth-links">
            <ul>
                <% if (locals.user){ %>
                <li>
                    <a href="/users/profile"><%= user.name %></a>
                </li>
                <li>
                    <a href="/users/sign-out">SignOut</a>
                </li>
                <% }else{ %>
                <li>
                    <a href="/users/sign-in">SignIn</a>
                </li>
                <li>
                    <a href="/users/sign-up">SignUp</a>
                </li>
        
                <% } %>
            </ul>
        </div>
    </nav>
 


</header>